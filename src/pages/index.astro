---
import Layout from '../layouts/Layout.astro';
import logoWhite from '../assets/logos/logo-white.svg';

const divisions = [
  {
    name: "Academy",
    tagline: "Learn to hack. Ethically.",
    description: "Grey hat hacking school for kids, seniors, and developers making the leap from software engineering to cybersecurity. Real skills. Real scenarios.",
    url: "https://academy.durazno.org",
    icon: "terminal",
    gradient: "from-lime/20 to-lime/5"
  },
  {
    name: "Mentor",
    tagline: "Find your guide.",
    description: "Connect with real experts who've been there. No charlatans. No ego. Just genuine guidance from people who actually ship.",
    url: "https://mentor.durazno.org",
    icon: "compass",
    gradient: "from-peach/20 to-peach/5"
  },
  {
    name: "Team",
    tagline: "LATAM talent. Redefined.",
    description: "We don't just place developers—we build support systems. English coaching, US work culture training, cloud tools, certifications, and a real team that makes them want to stay forever.",
    url: "https://team.durazno.org",
    icon: "users",
    gradient: "from-purple-500/20 to-purple-500/5"
  }
];

const expertise = [
  "WebSockets",
  "Media Streaming",
  "gRPC",
  "Digital Asset Custody",
  "Cloud Cost Optimization",
  "High Compression Algorithms",
  "Steganography",
  "Quantum Computing",
  "Underground Marketing",
  "Reverse Engineering",
  "Binary Exploitation",
  "Real-time Systems",
];

const socials = [
  { name: "YouTube", url: "https://www.youtube.com/@SocketsGuru", icon: "youtube" },
  { name: "Twitch", url: "https://www.twitch.tv/marcodali93", icon: "twitch" },
  { name: "X", url: "https://x.com/SocketsGuru", icon: "x" },
  { name: "LinkedIn", url: "https://www.linkedin.com/company/71863972", icon: "linkedin" },
  { name: "Instagram", url: "https://www.instagram.com/duraznoinc/", icon: "instagram" },
  { name: "TikTok", url: "https://www.tiktok.com/@zeroonepercent", icon: "tiktok" },
  { name: "Facebook", url: "https://www.facebook.com/majestic.binance", icon: "facebook" }
];
---

<Layout title="Durazno Labs | R&D in AI & Cybersecurity">
  <main class="min-h-screen overflow-hidden">
    <!-- Hero Section -->
    <section class="relative min-h-[90vh] sm:min-h-[85vh] flex flex-col items-center justify-center px-4 sm:px-6 py-12 sm:py-20">
      <!-- Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Main glow - smaller on mobile -->
        <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] sm:w-[600px] md:w-[800px] h-[400px] sm:h-[600px] md:h-[800px] bg-gradient-radial from-peach/10 via-peach/5 to-transparent rounded-full blur-3xl"></div>
        <!-- Secondary accent - hidden on small mobile -->
        <div class="hidden sm:block absolute bottom-1/4 right-1/4 w-[300px] md:w-[400px] h-[300px] md:h-[400px] bg-gradient-radial from-lime/8 to-transparent rounded-full blur-3xl"></div>
        <!-- Grid pattern overlay -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:40px_40px] sm:bg-[size:60px_60px]"></div>
      </div>

      <div class="relative z-10 max-w-4xl mx-auto text-center">
        <!-- Logo -->
        <div class="mb-6 sm:mb-10">
          <img
            src={logoWhite.src}
            alt="Durazno Labs"
            width="320"
            height="90"
            class="mx-auto w-[200px] sm:w-[260px] md:w-[320px] h-auto logo-hover cursor-pointer"
          />
        </div>

        <!-- Tagline -->
        <h1 class="text-2xl sm:text-3xl md:text-5xl font-bold text-white mb-6 leading-tight">
          We don't fear<br />
          <span class="bg-gradient-to-r from-peach via-peach to-lime bg-clip-text text-transparent">experimentation.</span>
        </h1>

        <p class="text-base sm:text-lg md:text-xl text-silver/70 max-w-2xl mx-auto mb-8 md:mb-10 leading-relaxed px-2">
          A research lab at the intersection of <span class="text-lime font-medium">Generative AI</span> and <span class="text-peach font-medium">Cybersecurity</span>.
          <br class="hidden sm:block" />
          Self-funded. Self-driven. <span class="text-white font-medium">Building what others can't—or won't dare to.</span>
        </p>

        <!-- CTA hint -->
        <div class="flex items-center justify-center gap-2 text-silver/40 text-xs sm:text-sm">
          <span>Explore our divisions</span>
          <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </div>
      </div>
    </section>

    <!-- Expertise Marquee -->
    <section class="relative py-8 sm:py-12 overflow-hidden border-y border-silver/5">
      <div class="absolute inset-0 bg-gradient-to-r from-navy via-transparent to-navy z-10 pointer-events-none"></div>

      <div class="marquee-container">
        <div class="marquee-content">
          {[...expertise, ...expertise].map((tech, i) => (
            <span class="inline-flex items-center gap-3 px-4 sm:px-6 text-sm sm:text-base font-medium text-silver/40 hover:text-peach transition-colors cursor-default whitespace-nowrap">
              <span class="w-1.5 h-1.5 rounded-full bg-lime/50"></span>
              {tech}
            </span>
          ))}
        </div>
        <div class="marquee-content" aria-hidden="true">
          {[...expertise, ...expertise].map((tech, i) => (
            <span class="inline-flex items-center gap-3 px-4 sm:px-6 text-sm sm:text-base font-medium text-silver/40 hover:text-peach transition-colors cursor-default whitespace-nowrap">
              <span class="w-1.5 h-1.5 rounded-full bg-lime/50"></span>
              {tech}
            </span>
          ))}
        </div>
      </div>
    </section>

    <!-- Divisions Section -->
    <section class="relative px-4 sm:px-6 py-16 sm:py-20 md:py-24" id="divisions">
      <!-- Section background -->
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-silver/[0.02] to-transparent"></div>

      <div class="relative max-w-6xl mx-auto">
        <div class="text-center mb-10 sm:mb-16">
          <span class="inline-block px-3 sm:px-4 py-1 sm:py-1.5 rounded-full bg-peach/10 text-peach text-xs sm:text-sm font-medium mb-3 sm:mb-4">
            Our Divisions
          </span>
          <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white">
            Three pillars. One mission.
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
          {divisions.map((division, index) => (
            <a
              href={division.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative"
            >
              <!-- Card -->
              <div class={`relative h-full p-5 sm:p-6 md:p-8 rounded-2xl sm:rounded-3xl border border-silver/10 bg-gradient-to-br ${division.gradient} backdrop-blur-sm transition-all duration-500 hover:border-silver/20 hover:scale-[1.02] hover:shadow-2xl hover:shadow-peach/5`}>
                <!-- Icon -->
                <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl sm:rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center mb-4 sm:mb-6 group-hover:bg-white/10 transition-colors">
                  {division.icon === "terminal" && (
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-lime" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  )}
                  {division.icon === "compass" && (
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-peach" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                    </svg>
                  )}
                  {division.icon === "users" && (
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                  )}
                </div>

                <!-- Content -->
                <div class="mb-4 sm:mb-6">
                  <h3 class="text-xl sm:text-2xl font-bold text-white mb-1 sm:mb-2 group-hover:text-peach transition-colors">
                    {division.name}
                  </h3>
                  <p class="text-silver/50 text-xs sm:text-sm font-medium uppercase tracking-wider">
                    {division.tagline}
                  </p>
                </div>

                <p class="text-silver/70 text-sm sm:text-base leading-relaxed mb-6 sm:mb-8">
                  {division.description}
                </p>

                <!-- Link indicator -->
                <div class="flex items-center gap-2 text-sm font-medium text-peach opacity-100 sm:opacity-0 group-hover:opacity-100 transition-all duration-300 sm:translate-y-2 sm:group-hover:translate-y-0">
                  <span>Explore</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Philosophy Section -->
    <section class="relative px-4 sm:px-6 py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <blockquote class="text-xl sm:text-2xl md:text-3xl font-light text-silver/60 leading-relaxed">
          <span class="italic">"We know how to break in. We choose to build instead."</span>
          <br />
          <span class="text-white not-italic font-medium mt-2 block">No investors. No compromises.</span>
        </blockquote>
      </div>
    </section>

    <!-- Footer -->
    <footer class="relative px-4 sm:px-6 py-10 sm:py-16 border-t border-silver/10">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col items-center gap-6 sm:gap-8 md:flex-row md:justify-between">
          <!-- Logo small -->
          <div class="flex items-center">
            <img
              src={logoWhite.src}
              alt="Durazno Labs"
              width="140"
              height="40"
              class="opacity-50 w-[100px] sm:w-[140px] h-auto logo-footer cursor-pointer transition-all duration-300"
            />
          </div>

          <!-- Socials -->
          <div class="flex items-center gap-4 sm:gap-5 flex-wrap justify-center">
            {socials.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-silver/40 hover:text-peach transition-colors duration-300"
                aria-label={social.name}
              >
                {social.icon === "youtube" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                )}
                {social.icon === "twitch" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714z"/>
                  </svg>
                )}
                {social.icon === "x" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
                {social.icon === "linkedin" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {social.icon === "instagram" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.757-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
                  </svg>
                )}
                {social.icon === "tiktok" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                )}
                {social.icon === "facebook" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

        <!-- Copyright -->
        <div class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-silver/5 text-center">
          <p class="text-silver/30 text-xs sm:text-sm">
            &copy; {new Date().getFullYear()} Durazno Labs. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .bg-gradient-radial {
    background: radial-gradient(circle, var(--tw-gradient-stops));
  }

  /* Infinite Marquee */
  .marquee-container {
    display: flex;
    width: 100%;
  }

  .marquee-content {
    display: flex;
    animation: marquee 30s linear infinite;
    flex-shrink: 0;
  }

  .marquee-container:hover .marquee-content {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Logo hover effect */
  .logo-hover {
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .logo-hover:hover {
    filter: brightness(0) saturate(100%) invert(44%) sepia(96%) saturate(1063%) hue-rotate(344deg) brightness(101%) contrast(101%);
    transform: scale(1.02);
  }

  .logo-footer:hover {
    filter: brightness(0) saturate(100%) invert(75%) sepia(50%) saturate(497%) hue-rotate(41deg) brightness(99%) contrast(91%);
    opacity: 1 !important;
  }
</style>
